  pfSense [label="pfSense (Gateway)\nWAN: vtnet0 (NAT)\nLAN: vtnet1 10.0.0.1/24\nOPT1: vtnet2 10.6.6.1/24\nOPT2: vtnet3 10.80.80.1/24", shape=folder];
