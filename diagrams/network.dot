  AD_Client1 [label="Windows 10 - Client1\nConnected: OPT2 (10.80.80.0/24)"];
  AD_Client2 [label="Windows 10 - Client2\nConnected: OPT2 (10.80.80.0/24)"];
  MalwareLab [label="Malware Analysis VMs\n(Windows analysis & isolated network)"];
  Splunk [label="Splunk (SIEM)\nConnected: LAN"];
  Tsurugi [label="Tsurugi (DFIR)\nConnected: LAN"];

  pfSense -> WAN [label="Internet (Host NAT)"];
  pfSense -> Kali [label="LAN"];
